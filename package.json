{
  "name": "evolution-api",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "test": "bun test --setup=test/setup.ts",
    "test:coverage": "bun test --setup=test/setup.ts --coverage",
    "dev": "bun run --watch src/index.ts",
    "lint": "eslint --ignore-pattern .gitignore .",
